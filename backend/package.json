{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently --handle-input \"wait-on dist/index.js && nodemon\" \"ttsc -w -p tsconfig.build.json\" ",
    "build": "rimraf dist && ttsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "lint": "ttsc -p . --noEmit --incremental false && eslint . --ext .js --ext .ts --ext .tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "mongo:init": "docker run --name mongodb -p 27017:27017 -d mongo",
    "mongo:start": "docker start mongodb"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.9",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^1.0.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.7",
    "typescript-transform-paths": "1",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.3.2",
    "@types/morgan": "^1.9.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.9.29",
    "morgan": "^1.10.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../jest.setup.js"
    ]
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.21.0",
    "node": ">= 12.9.1"
  }
}
